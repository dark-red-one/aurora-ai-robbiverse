# Aurora AI Empire - Development Docker Container
# Optimized for development with hot reloading and debugging
FROM ubuntu:22.04

# Prevent interactive prompts during build
ARG DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    nodejs \
    npm \
    postgresql-client \
    curl \
    wget \
    git \
    vim \
    htop \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set up working directory
WORKDIR /app

# Copy package files first (for better Docker layer caching)
COPY package*.json ./
COPY requirements.txt ./

# Install Node.js dependencies
RUN npm install

# Install Python dependencies with development tools
RUN pip3 install -r requirements.txt
RUN pip3 install --no-cache-dir \
    pytest \
    pytest-asyncio \
    black \
    flake8 \
    mypy \
    ipython \
    jupyter

# Copy Aurora application code
COPY src/ ./src/
COPY backend/ ./backend/
COPY database/ ./database/
COPY data/ ./data/
COPY scripts/ ./scripts/
COPY *.js ./
COPY *.sh ./

# Create necessary directories
RUN mkdir -p /app/logs /app/uploads /app/tmp /app/notebooks

# Set up permissions
RUN chmod +x *.sh

# Development-specific configurations
ENV PYTHONPATH=/app
ENV NODE_ENV=development
ENV DEBUG=true
ENV LOG_LEVEL=debug

# Expose ports for development
EXPOSE 8000 8001 3000 3001 5432 6379

# Development start command with hot reload
CMD ["/app/start_dev_container.sh"]



