{
    "name": "aurora-ai-robbiverse",
    "version": "1.0.0",
    "private": true,
    "description": "Allan's AI Empire - TestPilot CPG First, Then the World",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "dev": "echo 'Choose your app: npm run dev:testpilot or npm run dev:heyshopper'",
        "dev:testpilot": "cd apps/testpilot-cpg && npm run dev",
        "dev:heyshopper": "cd apps/heyshopper && npm run dev",
        "build": "npm run build --workspaces",
        "build:apps": "npm run build --workspace=apps/*",
        "build:packages": "npm run build --workspace=packages/*",
        "test": "npm run test --workspaces"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/allanperetz/aurora-ai-robbiverse"
    },
    "author": "Allan Peretz <allan@testpilotcpg.com>",
    "license": "PRIVATE"
}