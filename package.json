{
    "name": "aurora-ai-empire",
    "version": "1.0.0",
    "description": "Aurora AI Empire - Robbie's comprehensive AI ecosystem",
    "main": "src/index.js",
    "scripts": {
        "test": "jest",
        "test:unit": "jest tests/unit/",
        "test:integration": "jest tests/integration/",
        "test:e2e": "jest tests/e2e/",
        "test:performance": "jest tests/performance/",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "test:debug": "jest --verbose",
        "test:help": "echo 'Available test commands: test, test:unit, test:integration, test:e2e, test:performance, test:coverage, test:watch, test:debug'"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "jest": "^29.5.0",
        "jest-environment-node": "^29.5.0",
        "supertest": "^6.3.0",
        "ts-jest": "^29.1.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/tests/"
        ],
        "testMatch": [
            "**/*.test.js",
            "**/*.test.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js,ts}",
            "!src/**/*.d.ts",
            "!src/**/index.js",
            "!src/**/*.config.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        }
    }
}